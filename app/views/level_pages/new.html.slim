h1 New page

.container
	.row
		.col-xs-8
			= form_for LevelPage.new, class: 'form-inline' do |f|
				= f.hidden_field :number
				.form-group
					= f.label :level
					= select_tag :level_id, options_for_select(Level.all.pluck(:name, :id), "level_page[level_id]"), name: "level_page[level_id]", class: 'form-control'
				.form-group
					= f.label :image
					= f.file_field "image", multiple: true, name: "level_page[image]", class: 'form-control'
			p
				span.uploaded-pages
					| 0
				| &nbsp de &nbsp
				span.total-pages
					| 0
